<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('../partials/head', { title: page[0].name }) %>
  <link rel="stylesheet" href="../../plugins/toastr/toastr.min.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <%- include('../partials/preloader') %>

    <!-- Navbar -->
    <%- include('../partials/navbar') %>

      <!-- Main Sidebar Container -->
      <%- include('../partials/sidebar') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
          <!-- Content Header (Page header) -->
          <div class="content-header">
            <div class="container-fluid">
              <div class="row mb-2">
                <div class="col-sm-6">
                  <h1 class="m-0">
                    <%= page[0].name %>
                  </h1>
                </div><!-- /.col -->
                <%- include('../partials/breadcrumb') %>
              </div><!-- /.row -->
            </div><!-- /.container-fluid -->
          </div>
          <!-- /.content-header -->

          <!-- Main content -->
          <section class="content">
            <div class="container-fluid">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Lista de Medicamentos</h3>
                    <div class="card-tools">
                      <button type="button" class="btn btn-block btn-success btn-sm" data-toggle="modal"
                        data-target="#modalCadastroMedicamento">Novo</button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table id="listMedicamentos" class="table table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Fabricante</th>
                          <th>Nome Comercial</th>
                          <th>Nome Genérico</th>
                          <th>Forma Farmacêutica</th>
                          <th>Ações</th>
                        </tr>
                      </thead>
                      <tbody></tbody>
                      <tfoot>
                        <tr>
                          <th>ID</th>
                          <th>Fabricante</th>
                          <th>Nome Comercial</th>
                          <th>Nome Genérico</th>
                          <th>Forma Farmacêutica</th>
                          <th>Ações</th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
            </div><!-- /.container-fluid -->

            <%- include('modal_insert_medicamentos.ejs') %>
            <%- include('modal_update_medicamentos.ejs') %>
          </section>
          <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('../partials/footer') %>
  </div>
  <!-- ./wrapper -->
  <%- include('../partials/scripts') %>
    <script src="js/medicamentos/medicamentos.js"></script>
    <script src="js/medicamentos/listMedicamentos.js"></script>
    <script src="js/medicamentos/cadastroMedicamento.js"></script>
    <script src="js/medicamentos/updateMedicamento.js"></script>
</body>
</html>