<div class="modal fade" id="modalInsertLote">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastro de Lotes</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formInsertLotes">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Lote</label>
                                <input class="form-control" type="text" name="numeroLote" id="insert-lote"
                                    placeholder="Informe um Lote" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Fabricação</label>
                                <input type="text" class="form-control data-mask-date" name="dataFabricacao" id="insertDataFabricacao" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dataValidade">Validade</label>
                                <input type="text" class="form-control data-mask-date" name="dataValidade" id="dataValidade" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask required>
                            </div>                            
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button type="submit" class="btn btn-primary" form="formInsertLotes">Cadastrar</button>
            </div>
        </div>
    </div>
</div>