<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('../partials/head', { title: page[0].name }) %>
    <link rel="stylesheet" href="plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link rel="stylesheet" href="plugins/toastr/toastr.min.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <%- include('../partials/preloader') %>

      <!-- Navbar -->
      <%- include('../partials/navbar') %>

        <!-- Main Sidebar Container -->
        <%- include('../partials/sidebar') %>

          <!-- Content Wrapper. Contains page content -->
          <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
              <div class="container-fluid">
                <div class="row mb-2">
                  <div class="col-sm-6">
                    <h1 class="m-0">
                      <%= page[0].name %>
                    </h1>
                  </div><!-- /.col -->
                  <%- include('../partials/breadcrumb') %>
                </div><!-- /.row -->
              </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
              <div class="container-fluid">
                <div class="col-12">
                  <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Lista de Lotes</h3>
                      <div class="card-tools">
                        <button type="button" class="btn btn-block btn-success btn-sm" data-toggle="modal"
                          data-target="#modalInsertLote">Novo</button>
                      </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                      <table id="listLotes" class="table table-bordered table-hover">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Lote/Série</th>
                            <th>Data Fabricação</th>
                            <th>Data Validade</th>
                            <th>Dias para vencer</th>
                            <th>Saldo</th>
                            <th>Ações</th>
                          </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                          <tr>
                            <th>ID</th>
                            <th>Lote/Série</th>
                            <th>Data Fabricação</th>
                            <th>Data Validade</th>
                            <th>Dias para vencer</th>
                            <th>Saldo</th>
                            <th>Ações</th>
                          </tr>
                        </tfoot>
                      </table>
                    </div>
                    <!-- /.card-body -->
                  </div>
                  <!-- /.card -->
                </div>
              </div><!-- /.container-fluid -->

            </section>
            <!-- /.content -->
          </div>
          <!-- /.content-wrapper -->

          <%- include('modal_insert_lotes.ejs') %>
          <%- include('modal_update_lotes.ejs') %>

          <%- include('../partials/footer') %>
  </div>
  <!-- ./wrapper -->
  <%- include('../partials/scripts') %>
    <script src="js/lotes/lotes.js"></script>
    <script src="js/lotes/listLotes.js"></script>
    <script src="js/lotes/insertLotes.js"></script>
    <script src="js/lotes/updateLote.js"></script>
    <script src="plugins/select2/js/select2.full.min.js"></script>
    <!-- jquery-validation -->
    <script src="plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="plugins/jquery-validation/localization/messages_pt_BR.min.js"></script>
</body>

</html>