<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('../partials/head', { title: page[0].name }) %>
  <!-- BS Stepper -->
  <link rel="stylesheet" href="/plugins/bs-stepper/css/bs-stepper.min.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <%- include('../partials/preloader') %>

      <!-- Navbar -->
      <%- include('../partials/navbar') %>

        <!-- Main Sidebar Container -->
        <%- include('../partials/sidebar') %>

          <!-- Content Wrapper. Contains page content -->
          <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
              <div class="container-fluid">
                <div class="row mb-2">
                  <div class="col-sm-6">
                    <h1 class="m-0">
                      <%= page[0].name %>
                    </h1>
                  </div><!-- /.col -->
                  <%- include('../partials/breadcrumb') %>
                </div><!-- /.row -->
              </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
              <div class="container-fluid">
                <div class="col-12">
                  <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Estoque de medicamentos</h3>
                      <div class="card-tools">
                        <button type="button" class="btn btn-block btn-success btn-sm" data-toggle="modal"
                          data-target="#modalInsertEstoque">Novo</button>
                      </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                      <table id="listEstoque" class="table table-bordered table-hover">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Tipo movimentação</th>
                            <th>Documento</th>
                            <th>Data Movimentação</th>
                            <th>Ações</th>
                          </tr>
                        </thead>
                        <tbody></tbody>
                      </table>
                    </div>
                    <!-- /.card-body -->
                  </div>
                  <!-- /.card -->
                </div>
              </div><!-- /.container-fluid -->

            </section>
            <!-- /.content -->
          </div>
          <!-- /.content-wrapper -->

          <%- include('modal_insert_estoque.ejs') %>
          <%- include('modal_update_estoque.ejs') %>

              <%- include('../partials/footer') %>
  </div>
  <!-- ./wrapper -->
  <%- include('../partials/scripts') %>
    <script src="js/estoque/estoque.js"></script>
    <script src="js/estoque/listEstoque.js"></script>
    <script src="js/estoque/insertEstoque.js"></script>
    <script src="js/estoque/updateEstoque.js"></script>
    <!-- jquery-validation -->
    <script src="plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="plugins/jquery-validation/localization/messages_pt_BR.min.js"></script>
    <!-- BS-Stepper -->
    <script src="plugins/bs-stepper/js/bs-stepper.min.js"></script>
</body>

</html>